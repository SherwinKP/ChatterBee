<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>jegit : Chat Freely</title>
	<meta name="description" content="create anonymous one-on-one and group chats.">	
	<link href="http://fonts.googleapis.com/css?family=Permanent+Marker:regular|Jura:300,400,500,60&v1" rel="stylesheet" type="text/css">
	<style>
		body
		{
			color:#222;
			font-family:'Jura', serif;
		}
		
		h1
		{
			font-family:'Permanent Marker', serif;
			margin:30px 0;
		}
	</style>
</head>
<body>

<div class="container">
	<header class="span-24 last">
		<h1 class="logo span-12">jegit. <span>chat freely.</span></h1>
	</header>
	<div id="main" role="main" class="span-24 last">
		<h1><%= @room.name %></h1>
		<% @messages.each do |message| %>
			<p><%= strip_tags message["user"]%> - <%= strip_tags message["message"]%></p>
		<% end %>
	</div>
</div>

</body>
</html>