<h2>Room: <%= link_to @room.name, url(:room, :show, :id => @room.id)%></h2>
<h3 id="chatting-as">Chatting as <span><%= current_user.name %></span> <% unless current_user.approximate_location.nil? %>in <%= current_user.approximate_location %><% end %></h3>

<ul id="manuscript"></ul>

<input type="text" name="say-something" id="say-something" placeholder="say something and hit enter to send" autofocus="true" />


<div pub-key="<%= @pubkey %>" sub-key="<%= @subkey %>" ssl="off" origin="pubsub.pubnub.com" id="pubnub"></div>
<script src="http://cdn.pubnub.com/pubnub-3.1.min.js"></script>
<script>
	var channel = "<%= @room.name %>";
	var user = "<%= current_user.name %>";
</script>

<div id="below-chat-links">
	<%= link_to "Leave the room", url(:room, :leave, :id => @room.name, :confirm => "Are you sure?")%> |
	<%= link_to "Great conversation?  Print it.", url(:room, :print, :id => @room.name)%>
</div>